{% comment %} <!-- Page container -->
    <div class="max-w-6xl mx-auto px-4 py-12">
      <!-- Order details -->
      <div class="flex items-start md:items-end justify-between my-5">
    
        <div class="w-1/2">
          <h1 class="text-2xl font-bold text-gray-700">Order {{ order.name }}</h1>
          <p class="text-gray-500 my-2">Placed on {{ order.created_at | date: format: 'date' }}</p>
          <span class="text-sm text-white bg-gray-700 rounded-full my-2 px-4 py-1">{{ order.financial_status_label }}</span>
        </div>
        <!-- Go back button -->
        <a href="{{ routes.account_url }}" class="text-blue-700 hover:text-blue-900 underline font-medium">Back to account</a>
      </div>
      <!-- Order breakdown -->
      <div>
        {% for line_item in order.line_items %}
          <div class="w-full border border-gray-200 divide-y rounded-sm mb-4">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-12 md:p-12">
              <!-- Image Container -->
              <div class="w-full h-80 min-h-80 bg-gray-200 rounded-md overflow-hidden border">
                {% if line_item.image %}
                  <img
                    class="w-full h-full object-center object-cover"
                    src="{{ line_item.image | img_url: 'medium' }}"
                    alt="{{ line_item.image.alt }}">
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-center object-hover' }}
                {% endif %}
              </div>
              <!-- Items details Table -->
              <div>
                <h1 class="text-xl font-medium mb-4">{{ line_item.title | link_to: line_item.product.url }}</h1>
                <table class="table-auto w-full mb-4">
                  <tbody>
                    <tr>
                      <td class="border border-gray-200 px-4 py-2">Price</td>
                      <td class="border border-gray-200 px-4 py-2">{{ line_item.original_price | money }}</td>
                    </tr>
                    <tr>
                      <td class="border border-gray-200 px-4 py-2">Quantity</td>
                      <td class="border border-gray-200 px-4 py-2">{{ line_item.quantity }}</td>
                    </tr>
                    <tr>
                      <td class="border border-gray-200 px-4 py-2">Final Price</td>
                      <td class="border border-gray-200 px-4 py-2">{{ line_item.final_line_price | money }}</td>
                    </tr>
                  </tbody>
                </table>
                <div class="text-gray-500 mb-4">
                  {{ line_item.product.description | truncatewords: 15 }}
                </div>
              </div>
              <!-- Delivery address container -->
              <div>
                <h1 class="font-medium mb-4">Delivery Address</h1>
                <div class="text-gray-500-mb-4">
                  {{ order.shipping_address | format_address }}
                </div>
              </div>
            <!-- end grid -->
            </div>
          <!-- End border box -->
          </div>
        {% endfor %}
      </div>
    
    
</div> {% endcomment %}

<div class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
  <h1 class="text-2xl font-bold text-gray-700">Account</h1>

  <div class="block md:flex gap-4">
    {% assign number_of_orders = customer.orders | size %}
    {% if number_of_orders > 0 %}
      <div class="w-full my-6 md:my-12">
        <h2 class="text-xl font-bold text-gray-700">Order history</h2>

        {% paginate customer.orders by 1 %}
          <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
            {% for order in customer.orders %}
              <div class="relative">
                <div class="w-full min-80 bg-gray-200 rounded-md overflow-hidden lg:h-80">
                  {% if order.line_items.first.image %}
                    <img
                      class="w-full h-full object-center object-cover"
                      src="{{ order.line_items.first.image | img_url: 'medium' }}"
                      alt="{{ order.line_items.first.image.alt }}">
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-center object-cover' }}
                  {% endif %}
                </div>

                <div class="mt-4 flex items-start justify-between">
                  <div>
                    <h3 class="text-sm text-gray-700">{{ order.name | link_to: order.customer_url }}</h3>

                    <p class="mt-1 text-sm text-gray-500">{{ order.financial_status_label }}</p>
                  </div>
                  <div class="text-right">
                    <p class="text-sm font-medium text-white bg-gray-700 rounded-full px-3 py-1">{{ order.fulfillment_status_label }}</p>
                    <p class="text-sm">{{ order.total_price | money }}</p>
                  </div>
                </div>
              </div>
            {% endfor %}

          </div>

          <div class="max-w-6xl mx-auto">
            {% render 'pagination'
              , pagination: paginate %}
          </div>

        {% endpaginate %}
      </div>
    {% else %}
      <div class="w-full h-80 flex items-center justify-center">
        <h2 class="text-base md:text-2xl font-medium">You currently don't have any orders</h2>
      </div>
    {% endif %}


    <div class="w-full md:w-1/4">
      <h2 class="text-xl font-bold text-gray-700 mb-12">Account details</h2>

      {{ customer.default_address | format_address }}

      <a href="{{ routes.account_addresses_url }}" class="text-sm text-blue-600 hover:text-blue-900 underline">View addresses</a>
    </div>
  </div>
</div>