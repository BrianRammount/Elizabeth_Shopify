{% comment %} COntainer for contact form {% endcomment %}
<div class="flex flex-col items-center my-8">
  {% comment %} Form {% endcomment %}
  {% form 'contact' %}
    {% comment %} Label for input {% endcomment %}
    <label for="contact_name">Name</label>
    <input
      type="text"
      name="contact[name]"
      id="contact_name">
    {% comment %} label and input for email {% endcomment %}
    <label for="contact_email">Email address</label>
    <input
      type="email"
      name="contact[email]"
      id="contact_email">
    {% comment %} Textarea {% endcomment %}
    <label for="contact_message">Message</label>
    <textarea name="contact[body]" id="contact_message"></textarea>
    {% comment %} Submit Button {% endcomment %}
    <input type="submit" value="Submit message">
  {% endform %}
</div>

{% comment %} Schema for page {% endcomment %}
{% schema %}
  {
    "name": "Contact Form",
    "presets": [
      {
        "name": "Contact Form"
      }
    ]
  }
{% endschema %}